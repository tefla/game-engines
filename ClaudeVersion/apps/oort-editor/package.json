{
  "name": "@oort/editor-app",
  "version": "0.1.0",
  "description": "Oort Game Editor - A modular, extensible game development environment",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on -t 30000 http://localhost:5173 && NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "preview": "npm run build && electron .",
    "test": "vitest",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@oort/core": "workspace:*",
    "@oort/engine": "workspace:*",
    "@oort/slate": "workspace:*",
    "@oort/vcs": "workspace:*",
    "chokidar": "^3.6.0",
    "monaco-editor": "^0.55.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.170.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.170.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^39.2.7",
    "electron-reload": "^2.0.0-alpha.1",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^9.0.3"
  }
}
