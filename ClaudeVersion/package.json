{
  "name": "oort-engine",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "games/*",
    "apps/*"
  ],
  "scripts": {
    "test": "bun run --filter '@oort/engine' test",
    "test:engine": "bun run --filter '@oort/engine' test",
    "test:e2e": "bun run --filter '@oort/editor-app' test:e2e",
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter puzzle-demo dev",
    "editor": "bun run --filter '@oort/editor-app' dev"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  }
}
